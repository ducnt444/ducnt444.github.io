extends parts/layout.pug

block css
  link(rel="stylesheet", href="css/review.css")


block title
  title HALO Đánh giá

block content
  .breadcrumb-wrapper.container-xl
    ul.breadcrumb
      li.breadcrumb-item
        a(href='index.html') Trang chủ
      li.breadcrumb-item.active Đánh giá

  .review__main-banner
    img.main-banner__logo(src="img/img--misc/logo-white.png", alt="")
    img.main-banner__text(src="img/img--review/banner-text.png", alt="")

  section.display-till-md
    #sub-banner-area--min.carousel.slide(data-ride='carousel' data-touch='true')

      ul.carousel-indicators
        li.active(data-target='#sub-banner-area--min' data-slide-to='0')
        li(data-target='#sub-banner-area--min' data-slide-to='1')
        li(data-target='#sub-banner-area--min' data-slide-to='2')
        
      .carousel-inner
        a.carousel-item.active(href="review-details.html") 
          img(src='/halo/img/img--review/review-big-banner-max-v7.jpg' alt='')
          .carousel-caption
            h3 Một ngày cùng Canon 35mm f/1.4&nbsp;L:
            p Mối tình đầu với team "viền đỏ"
        a.carousel-item(href="review-details.html") 
          img(src='img/img--review/review-sub-banner-3.png' alt='')
          span.easter-egg Sigma 17-50mm Review 
        a.carousel-item(href="review-details.html") 
          img(src='img/img--review/review-sub-banner-4.jpg' alt='')
            
      a.carousel-control-prev(href='#sub-banner-area--min' data-slide='prev')
        span.carousel-control-prev-icon
      a.carousel-control-next(href='#sub-banner-area--min' data-slide='next')
        span.carousel-control-next-icon
    
  section#sub-banner-area--max.container-xl.hidden-till-md

    a.review__sub-banner--big(href="review-details.html")
      span Một ngày cùng Canon 35mm f/1.4&nbsp;L:
      span Mối tình đầu với team "viền đỏ"

    .review__sub-banner--small-area 

      a.review__sub-banner--small(href="review-details.html")
        img(src="img/img--review/review-sub-banner-3.png", alt="") 
        span.easter-egg Sigma 17-50mm Review 

      a.review__sub-banner--small(href="review-details.html")
        img(src="img/img--review/review-sub-banner-4.jpg", alt="") 
        span.easter-egg Canon 85mm Review 

      a.review__sub-banner--small(href="review-details.html")
        img(src="img/img--review/review-sub-banner-5.png", alt="") 
        span.easter-egg Canon 60D Review 

  section.main-area.container-xl
    .review__post-area

      .review__post-collection
        include parts/review-post-1.pug
        include parts/review-post-2.pug
        include parts/review-post-3.pug

      .loading-indicator.justify-content-center.mb-5
        .spinner-grow.text-dark
        .spinner-grow.text-dark.mx-3
        .spinner-grow.text-dark

      button.btn.btn--seemore.btn--dark Xem thêm

    aside.review__aside-area.hidden-till-md
      h3.aside__header Đọc nhiều nhất
      a.aside__post.d-block(href="")
        img.aside__post--img(src="img/img--review/aside-img-1.png", alt="")
        p.aside__post--header D500 Review: Canh bạc của Nikon

      a.aside__post.d-block(href="")
        img.aside__post--img(src="img/img--review/aside-img-2.jpg", alt="")
        p.aside__post--header Vị thế hiện tại của 2 ông lớn Ca-Ni

      a.aside__post.d-block(href="")
        img.aside__post--img(src="img/img--review/aside-img-3.png", alt="")
        p.aside__post--header D5600 Review: Máy ảnh cho mọi nhà
    
