extends parts/layout.pug

block css
  link(rel='stylesheet' type='text/css' href='//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css')
  link(rel="stylesheet", href="css/camera-hub.css")

block title

  title Camera

block script
  script(type='text/javascript' src='//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js')

block content

  h1.section__header.portal__header
        span Nhu cầu 
        span của bạn?

  section.portal.camera-carousel.display-till-md

    #camera-carousel.carousel.slide(data-ride='carousel' data-touch='true' data-interval='false')

      ul.carousel-indicators
        li.active(data-target='#camera-carousel' data-slide-to='0')
        li(data-target='#camera-carousel' data-slide-to='1')

      .carousel-inner.camera-carousel-inner

        .carousel-item.banner-carousel.banner-carousel--dslr.active
          img.banner-carousel__img(src='img/camera-hub-img/portal-dslr-min.png' alt='')
          .carousel-caption.banner-carousel__caption.font-weight-bold
            p.banner__text CHUYÊN NGHIỆP
            p.banner__text CHUẨN CHỈ
            p.banner__text CỘNG ĐỒNG LỚN
            a.btn.btn--dark.banner__btn.banner-carousel__btn(href="#") Xem tất cả DSLR

        .carousel-item.banner-carousel.banner-carousel--mrl
          img.banner-carousel__img(src='img/camera-hub-img/portal-mrl-min.png' alt='')
          .carousel-caption.banner-carousel__caption.font-weight-bold
            p.banner__text TIỆN LỢI
            p.banner__text THỜI THƯỢNG
            p.banner__text TRẺ TRUNG
            a.btn.btn--light.banner__btn.banner-carousel__btn(href="#") Xem tất cả Mirrorless

      a.carousel-control-prev(href='#camera-carousel' data-slide='prev')
        img(src='img/misc-img/prev-arrow-xs-v2.png')
      a.carousel-control-next(href='#camera-carousel' data-slide='next')
        img(src='img/misc-img/next-arrow-xs-v2.png')


  section.portal.hidden-till-md

    .portal__bg.hidden-till-md
      .portal__bg--green
      .portal__bg--pink

    .portal__body.container-xl.d-flex
      .banner-full.banner-full--dslr.d-flex.w-50
        img.banner-full__img(src="img/camera-hub-img/portal-dslr-v1.png", alt="")
        .banner-full__text-area.align-self-center
          .banner-full__text-only.font-weight-bold
            p.banner__text CHUYÊN NGHIỆP
            p.banner__text CHUẨN CHỈ
            p.banner__text CỘNG ĐỒNG LỚN
          a.btn.btn--dark.banner__btn.banner-full__btn(href="#") Xem tất cả DSLR

      .banner-full.banner-full--mrl.d-flex.w-50
        .banner-full__text-area.align-self-center
          .banner-full__text-only.font-weight-bold
            p.banner__text.text-light TIỆN LỢI
            p.banner__text.text-light THỜI THƯỢNG
            p.banner__text.text-light TRẺ TRUNG
          a.btn.btn--light.banner__btn.banner-full__btn(href="#") Xem tất cả Mirrorless
        img.banner-full__img(src="img/camera-hub-img/portal-mrl-max-v5.png", alt="")
      
    a.btn.btn--dark.portal-btn(href="#") Xem tất cả máy ảnh

  section.item-row.sale-row
    h1.section__header HOT SALE
    .container-xl.slider-row.sale-row.slider
      include parts/card.pug
      include parts/card.pug
      include parts/card.pug
      include parts/card.pug
      include parts/card.pug
    a.btn.btn--dark.item-row__btn(href="#") Xem toàn bộ 

  section.item-row.hot-row
    h1.section__header BÁN CHẠY
    .container-xl.slider-row.hot-row.slider
      include parts/card.pug
      include parts/card.pug
      include parts/card.pug
      include parts/card.pug
      include parts/card.pug
    a.btn.btn--dark.item-row__btn(href="#") Xem toàn bộ 

  section.item-row.love-row
    h1.section__header ĐÁNH GIÁ TỐT
    .container-xl.slider-row.love-row.slider
      include parts/card.pug
      include parts/card.pug
      include parts/card.pug
      include parts/card.pug
      include parts/card.pug
    a.btn.btn--dark.item-row__btn(href="#") Xem toàn bộ 



